<!DOCTYPE html>
<html>
  <head>
    <title>Pulgamecanica's Web</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light authors-layout">

    <span id="authors-curtain"></span>
    
    <div><%= @alert %></div>
    <div><%= @notice %></div>

    <nav class="icon-svg-sm authors-navbar gap-2 d-flex flex-column">
      <span class="card">
        <%= link_to the_shire_path, class: 'text-decoration-none btn-primary text-center btn-block p-0 bg-light' do %>
          <%= svg_icon("lotr") %>
        <% end %>
      </span>
      <span class="card">
        <%= link_to posts_path, class: 'text-decoration-none btn-primary text-center btn-block p-0 bg-light' do %>
          <%= svg_icon("page") %>
        <% end %>
      </span>
      <span class="card">
        <%= link_to projects_path, class: 'text-decoration-none btn-primary text-center btn-block p-0 bg-light' do %>
          <%= svg_icon("favourite") %>
        <% end %>
      </span>
      <span class="card">
        <%= link_to tags_path, class: 'text-decoration-none btn-primary text-center btn-block p-0 bg-light' do %>
          <%= svg_icon("tag1") %>
        <% end %>
      </span>
    </nav>
    <%= yield %>
  </body>
</html>
