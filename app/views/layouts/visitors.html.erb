<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags(default_meta_tags) %>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="icon" type="image/x-icon" href="<%= asset_path('author_img.ico')%>">
  </head>

  <body class="bg-light text-dark" id="visitors-layout">
    <nav id="side_bar">
      <header>
        <span id="logo">
          <%= svg_icon("logo") %>
          <%= svg_icon("splash") %>
        </span>
        <h1><%= link_to 'Pulgamecanica', root_path %><hr></h1>
        
        <h6>Coding Blog</h6>
      </header>
      <section>
          <h4><%= link_to 'About', about_path %></h4>
          <h4><%= link_to 'Blog', root_path %></h4>
          <h4><%= link_to 'Projects', showcase_path %></h4>
          <h4><%= link_to 'CV', cv_path %></h4>
      </section>
      <footer>
        <a class="dwarf-svg" href="https://github.com/pulgamecanica" target="blank"><%= svg_icon("github") %></a>
        <a class="dwarf-svg" href="mailto: andrehernandezrosado@gmail.com" target="blank"><%= svg_icon("mail") %></a>
        <a class="dwarf-svg" href="https://www.linkedin.com/in/andr%C3%A9-hern%C3%A1ndez-0572a1238/" target="blank"><%= svg_icon("linkedin") %></a>
        <a class="dwarf-svg" href="https://www.instagram.com/andy_maedhros/" target="blank"><%= svg_icon("instagram") %></a>
      </footer>
    </nav>
    <main>

      <nav class="bg-light" id="main-nav-bar">
        <section>
          <button id="expand_side_bar_button" onclick="expand_sideBar()">
            <%= svg_icon("menu_hamburger") %>
          </button>
          <button class="active" id="theme-button">
            <%= svg_icon("theme") %>
          </button>
          <button
            data-controller="search" id="search-controller"
            data-action="click->search#initializeSearch click@window->search#hide touchend@window->search#hide"
          >
            <%= svg_icon("search") %>
          </button>
          <input type="text" name="search-input" id="search-input" placeholder="search something...">
        </section>
      </nav>

      <div class="middle-earth">
        <%= yield %>
      </div>

      <div class="middle-earth">
        <div class="middle-earth-container">
          <footer>
          <p class="elfstone orc-vitality-drink">Pulgamecanica's Blog</p>
          <p class="arkenstone orc-vitality-drink">pulgamecanica11@gmail.com</p>
          <p class="silmaril orc-vitality-drink">Copyright Â© <%= Time.current.year %> All Rights Reserved by Pulgamecanica.</p>
          </footer>
        </div>
      </div>
    </main>
  </body>
</html>

<script type="text/javascript">
  function expand_sideBar() {
    document.querySelector("#side_bar").style.width = "100%";
    document.querySelector("#side_bar").style.maxWidth = "none";
    document.querySelector("#side_bar").style.display = "flex";
    document.querySelector("main").style.display = "none";
  }
  function contract_sideBar() {
    document.querySelector("#side_bar").style.width = "100%";
    document.querySelector("#side_bar").style.maxWidth = "25vw";
    document.querySelector("#side_bar").style.display = "none";
    document.querySelector("main").style.display = "block";
  }
</script>