<%= form_with(model: tag, local: false) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control'  %>
    <!--<= form.error_for :title, class: 'text-danger' > -->
  </div>

  <div class="form-group">
    <%= form.label :icon_svg %>
    <%= form.text_area :icon_svg, class: 'form-control' %> 
    <!--<= form.error_for :description, class: 'text-danger'>-->
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= form.color_field :color, class: 'form-control'  %>
    <!--<= form.error_for :title, class: 'text-danger' > -->
  </div>

  <div class="action mt-3">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>