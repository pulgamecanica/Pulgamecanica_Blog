<h1 class="text-center m-4"> <%= @tags.count %> Tags</h1>
<div class="row justify-content-center">
  <% @tags.each do |tag| %>
  	<div class="col-md-1 d-flex"><span class="p-2 rounded d-flex" style="background-color: <%= tag.color %>;"><span style="margin-right: 0.5rem;"><%= tag.title %></span><span class="label label-default icon-svg-xs"><%= tag.icon_svg.html_safe %></span></span></div>
	<% end %>
</div>
<hr>
<div class="row m-1">
	<% @tags.each do |tag| %>
		<div class="col-md-2 mb-4">
	    	<div class="card">
	    		<div class="card-header text-center">
	    			<h6 class="icon-svg-md mb-0"><%= tag.icon_svg.html_safe %></h6>
	    		</div>
	    		<div class="card-body text-center">
	        	<%= render 'form', tag: tag %>
	        	<%= link_to "Delete", tag_path(tag), class: 'btn btn-danger d-block mt-2', data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tag?"} %>
	      		</div>
	    	</div>
		</div>
	<% end %>
	<div class="col-md-2">
		<div class="card">
	    <h2 class="card-header text-center">
	    	New Tag
	    </h2>
			<div class="card-body text-center">
				<%= render 'form', tag: @new_tag %>
			</div>
		</div>
	</div>
</div>


