<%= form_with(model: post, local: false) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control'  %>
    <!--<= form.error_for :title, class: 'text-danger' > -->
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %> 
    <!--<= form.error_for :description, class: 'text-danger'>-->
  </div>

  <div class="form-group text-center">
    <%= form.label :header_image, class: 'd-block' %>
    <%= form.file_field :header_image%>
    <div class="mt-1">
      <% if post.header_image.present? %>
        <small>Current image:</small>
        <%= image_tag(post.header_image, width: '100%') %>
      <% end %>
    </div>
  </div>

  <div class="action mt-3">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>