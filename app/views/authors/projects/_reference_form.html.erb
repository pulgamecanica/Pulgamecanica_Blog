<div class="dialog d-inline" data-controller="dialog" data-dialog-name-id="showReferences">
  <span class="dialog-bait btn btn-secondary p-3 mt-2" data-action="click->dialog#showDialog">
    <%= svg_icon("references") %>
  </span>
  <div class="dialog-body" id="showReferences">
    <div class="body text-center">
      <h3> New Reference </h3>
      <%= form_with(model: [project, reference]) do |form| %>
        <div class="form-group">
          <% project.errors.where(:name).each do |error| %>
            <h6 class="text-danger d-block mt-1"><%= error.full_message %></h6>
          <% end %>
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <% project.errors.where(:link).each do |error| %>
            <h6 class="text-danger d-block mt-1"><%= error.full_message %></h6>
          <% end %>
          <%= form.label :link %>
          <%= form.text_field :link, class: 'form-control'  %>
        </div>
        <%= form.submit "Add Reference", class: 'btn btn-primary m-4' %>
      <% end %>
    </div>
  </div>
</div>